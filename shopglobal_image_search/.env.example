# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", ...}  # Your GCP service account JSON
GOOGLE_PROJECT_ID=your-project-id  # Your GCP project ID
GEMINI_API_LOCATION=global  # Gemini API location (default: global)
GEMINI_API_MODEL=gemini-2.0-flash-001  # Gemini model to use

# API Security
API_KEY=your-api-key  # API key for authentication
CORS_ALLOW_ORIGINS=*  # CORS allowed origins (use * for development)

# Image Processing Configuration
MAX_IMAGE_SIZE_MB=1.0  # Maximum image size in MB
MAX_IMAGE_QUALITY=95  # Maximum JPEG quality (0-100)
MIN_IMAGE_QUALITY=30  # Minimum JPEG quality (0-100)
QUALITY_STEP=5  # Step size for quality reduction

# Server Configuration
PORT=8080  # Port to run the server on